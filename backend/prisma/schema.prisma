// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int      @id
  title    String
  desc     String
  price    Int
  img      String
  img2     String
  inStock  Boolean
  sizes    String[]
  features String[]
  care     String[]
  shipping String[]
  returns  String[]
}
